set nocompatible

"hide buffers instead of closing them
set hidden

"Set font to consolas
"set guifont=Consolas:h10
set guifont=DejaVu\ Sans\ Mono:h11

"Set windows cut/copy/paste
"source $VIMRUNTIME/mswin.vim
let g:xml_syntax_folding=1
au FileType xml setlocal foldmethod=syntax

"Change the no text character (~) to off-color

set guioptions-=m   "Turn off menu
set guioptions-=T   "Turn off toolbar
set guioptions-=R   "Turn off right scrollbar
set guioptions-=r   "Turn off right scrollbar when vertical split
set guioptions-=L   "Turn off left scrollbar
set guioptions-=l   "Turn off left scrollbar when vertical window split

set guioptions+=a   "Make visual mode work better for sql scripts

